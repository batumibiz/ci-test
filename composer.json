{
    "name": "batumibiz/ci-test",
    "description": "Test only!",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Test\\": "src/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@psalm",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "phpstan": "phpstan analyze -l 8 ./src",
        "psalm": "psalm --output-format=compact",
        "psalm-help": "psalm --help"
    }
}
