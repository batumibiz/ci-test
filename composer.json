{
    "name": "batumibiz/ci-test",
    "description": "Test only!",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "slevomat/coding-standard": "^6.3",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Test\\": "src/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@psalm",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm --output-format=compact",
        "psalm-help": "psalm --help",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
